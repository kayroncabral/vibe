{
  "name": "api",
  "version": "1.0.0",
  "description": "Vibe API",
  "main": "src/index.js",
  "author": "Kayron Cabral",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/kayroncabral/vibe.git",
  "scripts": {
    "start": "babel-node src/index.js",
    "dev": "env-cmd -f ./development.env nodemon --exec babel-node src/index.js",
    "test": "env-cmd -f ./test.env ava --serial"
  },
  "dependencies": {
    "apollo-server-express": "^2.18.1",
    "apollo-server-integration-testing": "^2.3.0",
    "date-fns": "^2.16.1",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "ava": "^3.12.1",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2"
  },
  "ava": {
    "files": [
      "**/*.spec.js",
      "!**/node_modules"
    ],
    "verbose": true,
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ],
    "babel": {
      "testOptions": {
        "babelrc": true
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,graphql",
    "ignore": [
      "**/specs/**",
      "*.spec.js"
    ]
  },
  "engines": {
    "node": "12.18.3",
    "yarn": "^1.22.4"
  }
}
